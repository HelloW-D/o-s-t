#include <bits/stdc++.h>
using namespace std;
//hydro里最快的哦
struct drugs
{
    int t, p;
    drugs(int t = 0, int p = 0):t(t), p(p) {}
};

int main()
{
    ios_base::sync_with_stdio(false);
    cin.tie(nullptr);
    vector<drugs> a;
    int x, y, t, m;
    cin >> t >> m;
    a.push_back({0, 0});
    for (int i = 1; i <= m; i ++)
    {
        cin >> x >> y;
        a.push_back({x, y});
    }
    vector<long long> dp(t + 5, 0);
    for (int i = 1; i <= m; i ++)
    {
        for (int j = a[i].t; j <= t; j ++)
        {
            dp[j] = max(dp[j], dp[j - a[i].t] + a[i].p);
        }
    }
    cout << dp[t];
    return 0;
}