{
  "version": "2.0.0",
  "tasks": [
      {
          "label": "build-c",
          "type": "shell",
          "command": "gcc",
          "args": [
              "-g",
              "${file}",
              "-o",
              "${fileDirname}/${fileBasenameNoExtension}",
              "-lm"  // 数学库链接（可选）
          ],
          "group": {
              "kind": "build",
              "isDefault": true
          },
          "problemMatcher": ["$gcc"],
          "presentation": {
              "echo": true,
              "reveal": "always",
              "focus": false,
              "panel": "shared"
          }
      },
      {
          "label": "build-cpp",
          "type": "shell",
          "command": "g++",
          "args": [
              "-g",
              "-std=c++17",
              "${file}",
              "-o",
              "${fileDirname}/${fileBasenameNoExtension}"
          ],
          "group": "build",
          "problemMatcher": ["$gcc"],
          "presentation": {
              "echo": true,
              "reveal": "always",
              "focus": false,
              "panel": "shared"
          }
      },
      {
          "label": "build-active-file",
          "type": "shell",
          "command": "bash",
          "args": [
              "-c",
              "if [[ ${file} == *.c ]]; then gcc -g ${file} -o ${fileDirname}/${fileBasenameNoExtension}; else g++ -g -std=c++17 ${file} -o ${fileDirname}/${fileBasenameNoExtension}; fi"
          ],
          "group": "build",
          "problemMatcher": ["$gcc"],
          "presentation": {
              "echo": true,
              "reveal": "always"
          }
      }
  ]
}
